{{!-- loadform.hbs --}}

<h2 class="display-5">Suma tu Producto</h1>
<form id="productLoadForm" class="was-validated">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputTitle">Title</label>
      <input type="text" class="form-control" id="inputTitle" name="title" required>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPrice">Price</label>
      <input type="text" class="form-control" id="inputPrice" name="price" required>
    </div>
    <div class="form-group col-md-12">
      <label for="inputDescription">Description</label>
      <textarea class="form-control" id="inputDescription" rows="3" name="description" required></textarea>
    </div>
    <div class="form-group col-md-12">
      <label for="inputRanking">Ranking</label>
      <input type="number" class="form-control" id="inputRanking" name="ranking" min="0" max="5" required>
    </div>
    <div class="form-group col-lg-12">
      <label for="inputThumbnail">Thumbnail</label>
      <div>
      {{#each productsIcon}}
        <input type="radio" name="thumbnail" class="sr-only" id="inputThumbnail{{this.url}}" required value="{{this.url}}">
        <label for="inputThumbnail{{this.url}}">
          <img src="{{this.url}}" alt="inputThumbnail{{this.url}}">
        </label>
      {{/each}}
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Load</button>
</form>